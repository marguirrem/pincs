<div class="container">
  <div class="col-md-6">
    <div class="well">
      <h2>Registrarse</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
          <div class="field">
            <%= f.label :name,"Nombre" %><br />
            <%= f.text_field :name, :class => 'form-control',:placeholder =>'Tu nombre'%>
          </div>  
        </div>
        <div class="form-group">
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true,:class => 'form-control',:placeholder =>'yourname@domain.com'%>
          </div>  
        </div>
        
        <div class="form-group">
          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off",:class => 'form-control' %>
          </div>  
        </div>
        
        <div class="form-group">
          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off",:class => 'form-control' %>
          </div>  
        </div>
        
        <div class="form-group">
          <div class="actions">
            <%= f.submit "Crear Cuenta",:class => 'form-control btn-primary' %>
          </div>  
        </div>
        
      <% end %>

      <%= render "devise/shared/links" %>      
    </div>
  </div>
</div>

